{
    // {{{ CONFIGURATION PATH }}}
    // Linux: ~/.config/Code/User/
    // macOS: ~/Library/Application Support/Code/User/
    // Windows: %AppData%\Code\User
    // {{{ REFERENCE }}}
    // https://github.com/mydearxym/vscode-backup
    // https://zhuanlan.zhihu.com/p/73561114
    // https://vspacecode.github.io/
    // https://zhuanlan.zhihu.com/p/302568011
    // https://github.com/VSCodeVim/Vim
    // https://vspacecode.github.io/docs/default-keybindings#file
    // {{{ BUILTIN }}}
    "editor.cursorStyle": "block",
    "editor.fontFamily": "Monaco, Menlo, 'JetBrainsMono Nerd Font', Consolas, 'Courier New', monospace",
    "editor.fontSize": 13,
    "editor.guides.bracketPairs": true,
    "editor.guides.bracketPairsHorizontal": true,
    "editor.guides.highlightActiveIndentation": true,
    "editor.lineHeight": 0,
    "editor.lineNumbers": "relative",
    "editor.renderWhitespace": "all",
    "editor.minimap.enabled": false,
    "editor.semanticHighlighting.enabled": true,
    "editor.rulers": [
        80
    ],
    "editor.tabSize": 2,
    "search.showLineNumbers": true,
    "search.smartCase": true,
    "terminal.integrated.fontFamily": "Monaco, Menlo, 'JetBrainsMono Nerd Font', Consolas, 'Courier New', monospace",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.minimumContrastRatio": 1,
    "window.zoomLevel": -0.75,
    "window.titleBarStyle": "custom",
    "workbench.startupEditor": "none",
    "workbench.activityBar.location": "bottom",
    "workbench.colorCustomizations": {
        "statusBar.background": "#cba6f7",
        "statusBar.noFolderBackground": "#cba6f7",
        "statusBar.debuggingBackground": "#cba6f7",
        "statusBar.foreground": "#11111b",
        "statusBar.debuggingForeground": "#11111b"
    },
    "workbench.panel.showLabels": false,
    // {{{ PLUGIN: VIM }}}
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    "vim.autoindent": true,
    "vim.camelCaseMotion.enable": true,
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.replace": "block-outline",
    "vim.cursorStylePerMode.visual": "block-outline",
    "vim.cursorStylePerMode.visualblock": "block-outline",
    "vim.cursorStylePerMode.visualline": "block-outline",
    "vim.easymotion": true,
    "vim.handleKeys": {
        "<C-d>": true,
        "<C-s>": false,
        "<C-z>": false
    },
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.duration": 2000,
    "vim.highlightedyank.color": "#f38ba8",
    "vim.highlightedyank.textColor": "#11111b",
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.leader": "\\",
    "vim.ignorecase": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "<leader>",
                "<leader>"
            ],
            "commands": [
                "workbench.action.showCommands"
            ]
        },
        {
            "before": [
                "K"
            ],
            "commands": [
                "editor.action.showHover"
            ]
        },
        {
            "before": [
                "g",
                "d"
            ],
            "commands": [
                "editor.action.revealDefinition"
            ]
        },
        {
            "before": [
                "<leader>",
                "t",
                "n"
            ],
            "commands": [
                "workbench.action.toggleSidebarVisibility"
            ]
        },
    ],
    "vim.searchHighlightColor": "#a6e3a1",
    "vim.searchHighlightTextColor": "#11111b",
    "vim.searchMatchColor": "#89b4fa",
    "vim.searchMatchTextColor": "#11111b",
    "vim.substitutionColor": "#cba6f7",
    "vim.substitutionTextColor": "#11111b",
    "vim.showMarksInGutter": true,
    "vim.smartRelativeLine": true,
    "vim.sneak": true,
    "vim.sneakReplacesF": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.surround": true,
    "vim.showcmd": true,
    "vim.showmodename": true,
    "vim.useCtrlKeys": true,
    "vim.useSystemClipboard": true,
    "vim.visualstar": true,
    "vim.whichwrap": "b,s",
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.normal": [
        "#11111b",
        "#cdd6f4"
    ],
    "vim.statusBarColors.insert": [
        "#f38ba8",
        "#11111b"
    ],
    "vim.statusBarColors.visual": [
        "#cba6f7",
        "#11111b"
    ],
    "vim.statusBarColors.visualline": [
        "#cba6f7",
        "#11111b"
    ],
    "vim.statusBarColors.visualblock": [
        "#cba6f7",
        "#11111b"
    ],
    "vim.statusBarColors.replace": [
        "#f9e2af",
        "#11111b"
    ],
    "vim.statusBarColors.commandlineinprogress": [
        "#89b4fa",
        "#11111b"
    ],
    "vim.statusBarColors.searchinprogressmode": [
        "#eba0ac",
        "#11111b"
    ],
    "vim.statusBarColors.easymotionmode": [
        "#f5c2e7",
        "#11111b"
    ],
    "vim.statusBarColors.easymotioninputmode": [
        "#f5c2e7",
        "#11111b"
    ],
    "vim.statusBarColors.surroundinputmode": [
        "#f5c2e7",
        "#11111b"
    ],
    // {{{ PLUGIN: Catppuccin }}}
    "workbench.colorTheme": "Catppuccin Mocha",
    "catppuccin.accentColor": "blue",
    "catppuccin.colorOverrides": {
        "mocha": {
            "text": "#ffffff",
            "base": "#11111b",
            "mantle": "#11111b",
            "crust": "#11111b",
        },
    },
    "catppuccin.customUIColors": {
        "mocha": {
            "editorLineNumber.activeForeground": "green",
            "editorCursor.foreground": "rosewater",
            "commandCenter.border": "blue",
            "widget.border": "blue",
        },
    },
    // {{{ PLUGIN: Catppuccin Icons }}}
    "workbench.iconTheme": "catppuccin-mocha",
    "catppuccin-icons.hidesExplorerArrows": false,
    "catppuccin-icons.specificFolders": true,
    "catppuccin-icons.monochrome": false,
}
